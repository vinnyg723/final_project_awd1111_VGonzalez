<main class="container py-5">
  <div class="row mb-4">
    {{#with car}}
    <nav aria-label="breadcrumb ml-auto">
  <ol class="breadcrumb ml-2  smallerText">
        <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
        <li class="breadcrumb-item"><a href="/admin/car">View Cars</a></li>
        <li class="breadcrumb-item"  aria-current="page"><a href="/admin/car/delete/{{_id}}">Delete</a></li>
      </ol>
      </nav>
    <h2 class="h1 mb-4 mr-auto ml-2 shadow h2Text">Delete {{name}} Page</h2>
  </div>
  <div class="row d-flex justify-content-center align-self-center mx-3">
    <div class="card col-12" style="max-width: 26rem;">
      <img class="card-img-top mt-3 img-fluid" src="../../../images/{{image}}" alt="{{name}} image">
      <div class="card-body text-center">
        <h5 class="card-title h3 shadow">{{name}}</h5>
        <ul class="list-group list-group-flush">
          <li class="list-group-item text-center h5 shadow">${{price}} / {{year}}</li>
        </ul>
        <p class="card-text shadow">{{description}}</p>
      </div>


      <button type="button" class="btn btn-danger mt-3 mb-3 shadow" data-toggle="modal" data-target="#deleteModal">
        <i class="fas fa-trash-alt"></i> &nbsp; Delete Car
      </button>
    </div>
    <div class="modal fade" id="deleteModal">
      <div class="modal-dialog">
        <div class="modal-content">

          <div class="modal-header">
            <h4 class="modal-title">Confirm Delete</h4>
            <button type="button" class="close shadow" data-dismiss="modal">&times;</button>
          </div>

          <div class="modal-body text-center shadow">
            Do you want to delete {{name}}?
          </div>

          <div class="modal-footer">
            <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 m-auto d-flex justify-content-center">
              <form id="delete-car-form" method="POST" action="/api/admin/car/delete/{{_id}}">
                <button type="submit" class="btn btn-danger shadow"><i class="fas fa-trash-alt"></i> &nbsp; Delete</button>
              </form>
            </div>
            <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 m-auto d-flex justify-content-center">
              <button type="button" class="btn btn-success shadow" data-dismiss="modal"><i class="fas fa-ban"></i> &nbsp;
                Close</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/with}}
</main>