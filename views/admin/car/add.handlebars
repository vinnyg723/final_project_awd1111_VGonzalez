<main class="container pt-5" id="add">
     <nav aria-label="breadcrumb ml-auto">
  <ol class="breadcrumb ml-2 smallerText">
        <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
        <li class="breadcrumb-item"><a href="/admin/account">View Accounts</a></li>
        <li class="breadcrumb-item"  aria-current="page"><a href="/admin/account/add">Add</a></li>
      </ol>
      </nav>
  <h1 class="shadow h2Text">Add car</h1>
  <form id="add-car-form" method="POST" class="form needs-validation" action="/api/admin/car/add" novalidate>
    <div class="form-group">
      <label for="name">Name</label>
      <input id="name" name="name" class="form-control" type="text" required>
      <div class="invalid-feedback">
        Please enter a name.
      </div>
    </div>
    <div class="form-group">
      <label for="price" class="mt-2">Price</label>
      <input id="price" name="price" class="form-control" type="text" required>
      <div class="invalid-feedback">
        Please enter a price.
      </div>
    </div>
     <div class="form-group">
      <label for="year" class="mt-2">Year</label>
      <input id="year" name="year" class="form-control" type="text" required>
      <div class="invalid-feedback">
        Please enter a year.
      </div>
    </div>
    <div class="form-group">
      <label for="type" class="mt-2">Type</label>
      <input id="type" name="type" class="form-control" type="text" required>
      <div class="invalid-feedback">
        Please enter your a car type. (SUV, Coupe, Sedan...)
      </div>
    </div>
    <div class="form-group">
      <label for="model" class="mt-2">Model</label>
      <input id="model" name="model" class="form-control" type="text" required>
      <div class="invalid-feedback">
        Please enter Model.
      </div>
    </div>
    <div class="form-group">
      <label for="description" class="mt-2">Description</label>
      <input id="description" name="description" class="form-control" type="text" required>
      <div class="invalid-feedback">
        Please enter your description.
      </div>
    </div>
    <div class="form-group">
      <label for="keywords" class="mt-2">Keywords</label>
      <input id="keywords" name="keywords" class="form-control" type="text" required>
      <div class="invalid-feedback">
        Please enter keywords separated by a comma or space.
      </div>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary shadow"><i class="far fa-save"></i>&nbsp; Save</button>
    </div>
    <div class="form-group text-center">
      <output class="text-danger">{{error}}</output>
    </div>
  </form>
</main>