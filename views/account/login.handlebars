<head>
  <meta name="description" content="Login account from Mercedes Benz Online Dealership.">
  <meta name="keywords" content="login,account">
</head>
  <main class="container pt-5" id="loginPage">
    <h1 class="mb-5 text-white">Login</h1>
    <form id="login-form" method="POST" class="form needs-validation" action="/api/account/login" novalidate>

      <div class="form-group">
        <label for="username text-white">Username</label>
        <input id="username" name="username" type="text" class="form-control" required>
        <div class="invalid-feedback">
          Please enter your username.
        </div>
      </div>
      <div class="form-group">
        <label for="password text-white">Password</label>
        <input id="password" name="password" type="password" class="form-control" required>
        <div class="invalid-feedback">
          Please enter your password.
        </div>
      </div>
      <div class="form-group text-center">
        <button type="submit" class="btn btn-primary text-white shadow"><i class="fas fa-sign-in-alt"></i> &nbsp; Login</button>
      </div>
      <div class="form-group text-center">
        <output class="text-danger h5 mt-3">{{error}}</output>
      </div>
    </form>
    <div class="text-center mt-3">Don't have an account? <a href="/account/register">Register Here</a></div>
  </main>

