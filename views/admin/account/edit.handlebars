<main class="container pt-5" id="edit">

  {{#with account}}
     <nav aria-label="breadcrumb ml-auto">
  <ol class="breadcrumb ml-2  smallerText">
        <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
        <li class="breadcrumb-item"><a href="/admin/account">View Accounts</a></li>
        <li class="breadcrumb-item"  aria-current="page"><a href="/admin/account/edit/{{_id}}">Edit</a></li>
      </ol>
      </nav>
  <h1 class="shadow h2Text">Edit {{username}}</h1>
  <form id="edit-account-form" method="POST" class="form needs-validation" action="/api/admin/account/edit/{{_id}}" novalidate>
    <input id="_id" name="_id" class="form-control" type="text" value={{_id}} hidden>
    <div class="form-group">
      <label for="username">Username</label>
      <input id="username" name="username" class="form-control" type="text" value="{{username}}" required>
      <div class="invalid-feedback">
        Please enter a username.
      </div>
    </div>
        <div class="form-group">
      <label for="password">New Password</label>
      <input id="password" name="password" class="form-control" type="text" required>
      <div class="invalid-feedback">
        Please enter a new password.
      </div>
    </div>
    <div class="form-group">
      <label for="confirmPassword">Confirm Password</label>
      <input id="confirmPassword" type="password" name="confirmPassword" class="form-control" type="text" required>
      <div class="invalid-feedback">
        Please enter a confirm password.
      </div>
    </div>
    <div class="form-group">
      <label for="firstName" class="mt-2">First Name</label>
      <input id="firstName" name="firstName" class="form-control" type="text" value="{{firstName}}" required>
      <div class="invalid-feedback">
        Please enter a first name.
      </div>
    </div>
    <div class="form-group">
      <label for="lastName" class="mt-2">First Name</label>
      <input id="lastName" name="lastName" class="form-control" type="text" value="{{lastName}}" required>
      <div class="invalid-feedback">
        Please enter a last name.
      </div>
    </div>
    <div class="form-group">
      <label for="email" class="mt-2">Email</label>
      <input id="email" name="email" class="form-control" type="text" value="{{email}}" required>
      <div class="invalid-feedback">
        Please enter an email.
      </div>
    </div>
    <div class="form-group">
      <label for="phone" class="mt-2">Phone</label>
      <input id="phone" name="phone" class="form-control" type="text" value="{{phone}}" required>
      <div class="invalid-feedback">
        Please enter a phone number.
      </div>
    </div>
    <div class="form-group">
      <label for="keywords" class="mt-2">Keywords</label>
      <input id="keywords" name="keywords" class="form-control" type="text" value={{keywords}} required>
      <div class="invalid-feedback">
        Please enter keywords separated by a comma or space.
      </div>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary shadow"><i class="far fa-save"></i>&nbsp; Save</button>
    </div>

  </form>

  {{/with}}
  <div class="form-group text-center">
    <output class="text-danger">{{error}}</output>
  </div>
</main>