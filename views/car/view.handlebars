<main class="container pt-5" id="view">
    {{#with car}}
    
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item text-white"><a href="/">Cars</a></li>
        <li class="breadcrumb-item text-white"><a href="/">{{type}}</a></li>
        <li class="breadcrumb-item text-white" aria-current="page">{{name}}</li>
      </ol>
    </nav>
    <div class="row mb-4">
    <h2 class="mr-auto animate__animated  animate__slideInLeft ml-3 text-white shadow">{{name}} / {{year}}</h2>
    <a class="btn btn-primary ml-auto align-self-center animate__animated animate__slideInRight mr-3 text-white shadow" href="{{_id}}/order"><i class="fas fa-arrow-right"></i>&nbsp; Place Order </a>
    </div>
    <div class="row d-flex justify-content-center">
      <div class="col-md-12 mt-3 animate__animated  animate__slideInLeft">
        <img class="card-img-top img-fluid" src="../images/{{image}}" alt="{{name}} image">
      </div>
      <div class="card col col-md-12 mt-3 animate__animated animate__slideInRight mx-3 mb-3" style="width: 24rem;">
        <div class="card-body d-flex justify-content-center">
          <ul class="list-group list-group-flush">
            <li class="list-group-item text-center text-white h3 bg-recolor"> ${{price}} MSRP</li>
            <li class="list-group-item text-center text-white bg-recolor h5">{{description}}</li>
          </ul>
        </div>
      </div>
    </div>
    {{/with}}
  </main>
