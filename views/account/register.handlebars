<main class="container pt-5" id="registerPage">
  <h1 class="mb-5">Register</h1>
  <form id="register-form" method="POST" class="form needs-validation" action="/api/account/register" novalidate>
    <div class="form-group">
      <label for="username">Username</label>
      <input id="username" name="username" class="form-control" type="text" value="{{account.username}}" required>
      <div class="invalid-feedback">
        Please enter a username.
      </div>
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input id="password" type="password" name="password" class="form-control" type="text" required>
      <div class="invalid-feedback">
        Please enter a password.
      </div>
    </div>
    <div class="form-group">
      <label for="confirmPassword">Confirm Password</label>
      <input id="confirmPassword" type="password" name="confirmPassword" class="form-control" type="text" required>
      <div class="invalid-feedback">
        Please enter a confirm password.
      </div>
    </div>
    <div class="form-group">
      <label for="firstName">First Name</label>
      <input id="firstName" name="firstName" class="form-control" type="text" value="{{account.firstName}}" required>
      <div class="invalid-feedback">
        Please enter your first name.
      </div>
    </div>
    <div class="form-group">
      <label for="lastName">Last Name</label>
      <input id="lastName" name="lastName" class="form-control" type="text" value="{{account.lastName}}" required>
      <div class="invalid-feedback">
        Please enter your last name.
      </div>
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input id="email" name="email" class="form-control" type="email" placeholder="john@doe.com"
        value="{{account.email}}" required>
      <div class="invalid-feedback">
        Please enter a valid email address.
      </div>
    </div>
    <div class="form-group">
      <label for="phone">Phone Number</label>
      <input id="phone" type="phone" name="phone" class="form-control" type="text" placeholder="(123) 456-7890"
        value="{{account.phone}}" required>
      <div class="invalid-feedback">
        Please enter a valid phone number.
      </div>
    </div>

    <div class="row">
      <div class="form-group col-12 col-sm-12 col-md-6 col-lg-4 col-xl-4 d-flex justify-content-center">
        <button type="submit" class="btn btn-primary mt-3 mb-3 mr-auto shadow"><i class="fas fa-user-edit"></i> &nbsp;
          Register</button>
        <button type="button" class="btn btn-danger shadow mt-3 mb-3 mr-auto" data-toggle="modal"
          data-target="#reset-form">
          <i class="fas fa-trash-alt"></i>&nbsp; Reset Form
        </button>
      </div>
    </div>
    <div class="modal fade" id="reset-form">
      <div class="modal-dialog">
        <div class="modal-content">

          <div class="modal-header">
            <h4 class="modal-title">Confirm Reset</h4>
            <button type="button" class="close shadow" data-dismiss="modal">&times;</button>
          </div>

          <div class="modal-body text-center">
            Do you want to reset the form?
          </div>

          <div class="modal-footer">
            <form id="reset-form">
              <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 m-auto d-flex justify-content-center">
                <button id="clearRegisterForm" class="btn btn-danger shadow" data-dismiss="modal"><i
                    class="fas fa-trash-alt"></i>&nbsp; Reset</button>
              </div>
            </form>
            <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 m-auto d-flex justify-content-center">
              <button type="button" class="btn btn-success shadow" data-dismiss="modal"><i class="fas fa-ban"></i>&nbsp;
                Close</button>
            </div>
          </div>

        </div>
      </div>
    </div>
    <div class="form-group text-center">
      <output class="text-danger h5">{{error}}</output>
    </div>
  </form>
</main>